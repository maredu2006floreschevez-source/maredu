# 1 — crea carpeta y entra en ella
mkdir midnightbites-backend
cd midnightbites-backend

# 2 — inicializa npm
npm init -y

# 3 — instala dependencias
npm install express cors dotenv jsonwebtoken bcrypt prisma @prisma/client

# 4 — instala nodemon como dev (opcional, para desarrollo)
npm install -D nodemon
